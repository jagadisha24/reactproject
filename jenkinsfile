pipeline {
    agent any

tools {
        nodejs 'nodejs'  // 'nodejs' is the name you gave it in the Global Tool Configuration
    }
    
    stages{
        stage('git checkout'){
           steps{
               git branch: 'main', url: ''
               
               
           }
        }
        
        stage('Docker Build and tag'){
         steps{
            sh "docker build -t jagadishasiddaiah/react-application:1 ."
         }
      }
      stage('Containerisation'){
        steps{
            sh '''
            docker stop c1
            docker rm c1
             docker run -it -d --name c1 -p 9000:80 jagadishasiddaiah/react-application:1

            '''
        }
      }
    } 
}
